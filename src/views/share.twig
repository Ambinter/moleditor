<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h3 class="modal-title">Share</h3>
		</div>
		<div class="modal-body">
				<strong>Publish</strong>
			<div id="checkpublic"" class=" onoff pull-right">
				{%if is_public %}
					<span class="spin on"></span>
				{% else %}
					<span class="spin off"></span>
				{% endif %}
			</div>
			<span class="small"> - Make this database public allow you to share your work </span>
			<script>
				$("#checkpublic").click(function(){
					$("#share").load("{{ path ('make-public', {'key':key, 'is_public':is_public}) }}");
				});
			</script>

			{%if is_public %}
				<hr/>
				<div class="form-group">
					<span class="glyphicon glyphicon-send"></span>
					{{ form_label(form.publicLink) }} <span class="small"> - Send this public link to share your work. </span>
					{{ form_widget(form.publicLink) }}
					<span class="text-danger small"> They will have limited access (read-only) to this database. </span>
				</div>
				<div class="form-group">
					<span class="glyphicon glyphicon-user"></span>
					{{ form_label(form.privateLink) }} <span class="small"> - Keep this address to access this database again with admin rigths</span>
					{{ form_widget(form.privateLink) }}
					<span class="text-danger small"> Do not share this link, only use public links for sharing. </span>
				</div>
			{% endif %}

		</div>
		<div class="modal-footer">

			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		</div>
	</div>
	
	
</div>
